<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenRol" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/montaña</item>
        <item name="colorPrimaryVariant">@color/rojo_anaranjado</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/naranja_sanguineo</item>
        <item name="colorSecondaryVariant">@color/rojo_anaranjado</item>
        <item name="colorOnSecondary">@color/montaña</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/garamond</item>
    </style>

    <style name="OtherButtonTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/montaña</item>
    </style>

    <style name="OrangeButton" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/rojo_anaranjado</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.OpenRol.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OpenRol.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OpenRol.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>