<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/montaña"
    tools:context=".SelectCharSystem">

    <TextView
        android:id="@+id/selectASystemChar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige el sistema de juego"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/selCharDnD"
            android:backgroundTint="@color/white"
            android:textColor="@color/montaña"
            android:textAllCaps="false"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="openChar"
            android:text="Dungeons &amp; Dragons (5ed)"
            android:textSize="20sp" />


        <Button
            android:id="@+id/selCharAquelarre"
            android:backgroundTint="@color/white"
            android:textColor="@color/montaña"
            android:textAllCaps="false"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Aquelarre"
            android:textSize="20sp" />

        <Button
            android:id="@+id/selCharASOIAF"
            android:backgroundTint="@color/white"
            android:textColor="@color/montaña"
            android:textAllCaps="false"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Canción de Hielo y Fuego"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abre una hoja ya existente"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toEndOf="@+id/floatingActionButton"
        app:layout_constraintStart_toStartOf="@+id/floatingActionButton" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/ic_open" />
</androidx.constraintlayout.widget.ConstraintLayout>