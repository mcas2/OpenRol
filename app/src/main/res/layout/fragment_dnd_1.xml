<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/plainTextRace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raza"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="@+id/plainTextClass"
            app:layout_constraintEnd_toStartOf="@+id/raceSpinnerDnD"
            app:layout_constraintStart_toEndOf="@+id/classSpinnerDnD"
            app:layout_constraintTop_toTopOf="@+id/plainTextClass" />

        <TextView
            android:id="@+id/dndPlainTextDexterity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destreza"
            android:textColor="@color/montaña"
            app:layout_constraintEnd_toEndOf="@+id/cardViewDexterity"
            app:layout_constraintStart_toStartOf="@+id/cardViewDexterity"
            app:layout_constraintTop_toBottomOf="@+id/cardViewDexterity" />

        <EditText
            android:id="@+id/dndCHeditTextStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="2"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/cardViewStregth"
            app:layout_constraintStart_toStartOf="@+id/cardViewStregth"
            app:layout_constraintTop_toBottomOf="@id/cardViewStregth" />

        <Switch
            android:id="@+id/dndInspirationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/garamond"
            android:text="Inspiración"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <Spinner
            android:id="@+id/raceSpinnerDnD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/dndRaces"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/plainTextRace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/plainTextRace"
            app:layout_constraintTop_toTopOf="@+id/plainTextRace" />

        <TextView
            android:id="@+id/plainTextSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Velocidad"
            app:layout_constraintEnd_toEndOf="@+id/cardViewInitiative"
            app:layout_constraintStart_toStartOf="@+id/cardViewInitiative"
            app:layout_constraintTop_toBottomOf="@+id/cardViewInitiative" />

        <EditText
            android:id="@+id/dndCHeditTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="9"
            android:text=" "
            app:layout_constraintBottom_toBottomOf="@+id/plaintTextName"
            app:layout_constraintStart_toEndOf="@+id/plaintTextName"
            app:layout_constraintTop_toTopOf="@+id/plaintTextName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewConstitution"
            android:backgroundTint="@color/montaña"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewDexterity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardViewDexterity"
            app:layout_constraintTop_toTopOf="@+id/cardViewDexterity">

                <TextView
                    android:id="@+id/dndCSModConstitution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/dndPlainTextStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuerza"
            android:textColor="@color/montaña"
            app:layout_constraintEnd_toEndOf="@+id/cardViewStregth"
            app:layout_constraintStart_toStartOf="@+id/cardViewStregth"
            app:layout_constraintTop_toBottomOf="@id/cardViewConstitution" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewIntelligence"
            android:backgroundTint="@color/montaña"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewWisdom"
            app:layout_constraintEnd_toStartOf="@+id/cardViewWisdom"
            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardViewWisdom">

                <TextView
                    android:id="@+id/dndCSModIntelligence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/dndCHeditTextIntelligence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="2"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/cardViewIntelligence"
            app:layout_constraintStart_toStartOf="@+id/cardViewIntelligence"
            app:layout_constraintTop_toBottomOf="@id/cardViewCharisma" />

        <TextView
            android:id="@+id/plainTextAtributos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Atributos"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dndCHeditTextWisdom" />

        <TextView
            android:id="@+id/plainTextInitiative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciativa"
            app:layout_constraintEnd_toEndOf="@+id/cardViewCompetencia"
            app:layout_constraintStart_toStartOf="@+id/cardViewCompetencia"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCompetencia" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDexterity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/montaña"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cardViewConstitution"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardViewStregth"
            app:layout_constraintTop_toBottomOf="@id/plainTextCaracteristicas">

                <TextView
                    android:id="@+id/dndCSModDexterity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/plainTextCompetencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B.Competencia"
            app:layout_constraintEnd_toEndOf="@+id/cardViewSpeed"
            app:layout_constraintStart_toStartOf="@+id/cardViewSpeed"
            app:layout_constraintTop_toBottomOf="@+id/cardViewArmorClass" />

        <EditText
            android:id="@+id/dndCHeditTextConstitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="2"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/cardViewConstitution"
            app:layout_constraintStart_toStartOf="@+id/cardViewConstitution"
            app:layout_constraintTop_toBottomOf="@id/cardViewConstitution" />

        <TextView
            android:id="@+id/dndPlainTextWisdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabiduría"
            android:textColor="@color/montaña"
            app:layout_constraintEnd_toEndOf="@+id/cardViewWisdom"
            app:layout_constraintStart_toStartOf="@+id/cardViewWisdom"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCharisma" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCharisma"
            android:backgroundTint="@color/montaña"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewWisdom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardViewWisdom"
            app:layout_constraintTop_toTopOf="@+id/cardViewWisdom">

                <TextView
                    android:id="@+id/dndCSModCharisma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cardViewSpeed"
            app:layout_constraintStart_toStartOf="@+id/cardViewArmorClass"
            app:layout_constraintTop_toBottomOf="@+id/plainTextCompetencia">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/plainTextPGM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Puntos de golpe máximos"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/plainTextPGA"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/dndCHeditTextPGM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="2"
                            android:inputType="number"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="@+id/plainTextPGM"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/plainTextPGM" />

                        <TextView
                            android:id="@+id/plainTextPGA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Puntos de golpe actuales"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/plainTextPGT"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/plainTextPGM" />

                        <EditText
                            android:id="@+id/dndCHeditTextPGA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="2"
                            android:inputType="number"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="@+id/plainTextPGA"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/plainTextPGA" />

                        <TextView
                            android:id="@+id/plainTextPGT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Puntos de golpe temporales"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/plainTextDG"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/plainTextPGA" />

                        <EditText
                            android:id="@+id/dndCHeditTextPGT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="2"
                            android:inputType="number"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="@+id/plainTextPGT"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/plainTextPGT" />

                        <TextView
                            android:id="@+id/plainTextDG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Dados de golpe"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/plainTextPGT" />

                        <EditText
                            android:id="@+id/dndCHeditTextDG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="4"
                            android:hint="1D8"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="@+id/plainTextDG"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/plainTextDG" />

                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewInitiative"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/naranja_dulce"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardViewCompetencia"
            app:layout_constraintTop_toTopOf="@+id/cardViewCompetencia">

                <EditText
                    android:id="@+id/dndCHeditTextInitiative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSpeed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/naranja_dulce"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"

            app:layout_constraintEnd_toStartOf="@+id/cardViewCompetencia"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardViewArmorClass"
            app:layout_constraintTop_toBottomOf="@id/plainTextAtributos">

                <EditText
                    android:id="@+id/dndCHeditTextSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/dndCHeditTextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:ems="2"
            android:inputType="number"
            android:text="1"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/plaintTextName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/plaintTextName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewWisdom"
            android:layout_width="49dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/montaña"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cardViewCharisma"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardViewIntelligence"
            app:layout_constraintTop_toBottomOf="@id/dndCHeditTextConstitution">

                <TextView
                    android:id="@+id/dndCSModWisdom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCompetencia"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/naranja_dulce"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cardViewInitiative"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardViewSpeed"
            app:layout_constraintTop_toTopOf="@+id/cardViewSpeed">

                <EditText
                    android:id="@+id/dndCHeditTextCompetencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/dndCHeditTextDexterity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="2"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/cardViewDexterity"
            app:layout_constraintStart_toStartOf="@+id/cardViewDexterity"
            app:layout_constraintTop_toBottomOf="@id/cardViewDexterity" />

        <EditText
            android:id="@+id/dndCHeditTextWisdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="2"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/cardViewWisdom"
            app:layout_constraintStart_toStartOf="@+id/cardViewWisdom"
            app:layout_constraintTop_toBottomOf="@id/cardViewCharisma" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewArmorClass"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/naranja_dulce"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cardViewSpeed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardViewSpeed">

                <EditText
                    android:id="@+id/dndCHeditTextArmorClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/dndPlainTextIntelligence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inteligencia"
            android:textColor="@color/montaña"
            app:layout_constraintEnd_toEndOf="@+id/cardViewIntelligence"
            app:layout_constraintStart_toStartOf="@+id/cardViewIntelligence"
            app:layout_constraintTop_toBottomOf="@id/cardViewCharisma" />

        <TextView
            android:id="@+id/plainTextCaracteristicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Características"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/raceSpinnerDnD" />

        <TextView
            android:id="@+id/plainTextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nivel"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/dndCHeditTextLevel"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dndCHeditTextCharisma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="2"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/cardViewCharisma"
            app:layout_constraintStart_toStartOf="@+id/cardViewCharisma"
            app:layout_constraintTop_toBottomOf="@id/cardViewCharisma" />

        <TextView
            android:id="@+id/dndPlainTextConstitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constitución"
            android:textColor="@color/montaña"
            app:layout_constraintEnd_toEndOf="@+id/cardViewConstitution"
            app:layout_constraintStart_toStartOf="@+id/cardViewConstitution"
            app:layout_constraintTop_toBottomOf="@+id/cardViewConstitution" />

        <TextView
            android:id="@+id/dndPlainTextCharisma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carisma"
            android:textColor="@color/montaña"
            app:layout_constraintEnd_toEndOf="@+id/cardViewCharisma"
            app:layout_constraintStart_toStartOf="@+id/cardViewCharisma"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCharisma" />

        <Spinner
            android:id="@+id/classSpinnerDnD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/dndClasses"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/plainTextClass"
            app:layout_constraintEnd_toStartOf="@+id/plainTextRace"
            app:layout_constraintStart_toEndOf="@+id/plainTextClass"
            app:layout_constraintTop_toTopOf="@+id/plainTextClass" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewStregth"
            android:backgroundTint="@color/montaña"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewDexterity"
            app:layout_constraintEnd_toStartOf="@+id/cardViewDexterity"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardViewDexterity">

                <TextView
                    android:id="@+id/dndCSModStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="0"
                    android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/plainTextArmorClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C.Armadura"
